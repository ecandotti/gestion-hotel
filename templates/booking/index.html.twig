{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Booking index</h1>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Start_date</th>
                    <th>End_date</th>
                    <th>Create_at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.startDate ? booking.startDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ booking.endDate ? booking.endDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ booking.createAt ? booking.createAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                        <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('booking_new') }}">Create new</a>
    </div>
{% endblock %}
