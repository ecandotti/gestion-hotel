{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Booking</h1>
    <div class="container">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ booking.id }}</td>
                </tr>
                <tr>
                    <th>Start_date</th>
                    <td>{{ booking.startDate ? booking.startDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>End_date</th>
                    <td>{{ booking.endDate ? booking.endDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Create_at</th>
                    <td>{{ booking.createAt ? booking.createAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('booking_index') }}">back to list</a>

        <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

        {{ include('booking/_delete_form.html.twig') }}
    </div>
{% endblock %}
