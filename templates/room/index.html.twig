{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Room index</h1>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Price</th>
                    <th>Number</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for room in rooms %}
                <tr>
                    <td>{{ room.id }}</td>
                    <td>{{ room.price }}</td>
                    <td>{{ room.number }}</td>
                    <td>{{ room.name }}</td>
                    <td>
                        <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                        <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('room_new') }}">Create new</a>
    </div>
{% endblock %}
