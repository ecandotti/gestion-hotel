{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Room</h1>
    <div class="container">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ room.price }}</td>
                </tr>
                <tr>
                    <th>Number</th>
                    <td>{{ room.number }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('room_index') }}">back to list</a>

        <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

        {{ include('room/_delete_form.html.twig') }}
    </div>
{% endblock %}
